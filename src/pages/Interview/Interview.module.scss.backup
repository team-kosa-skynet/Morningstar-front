.container {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: calc(100vh - 310px); // 헤더와 푸터 높이를 뺀 값
  background-color: #ffffff;
}

.innerBox {
  display: flex;
  justify-content: center;
  width: 1160px;
  height: 772px;
}

.contentWrapper {
  display: flex;
  gap: 20px;
  width: 1095px;
  height: 725px;
}

// 왼쪽 모니터 - 비디오 영역
.leftMonitor {
  display: flex;
  width: 725px;
  height: 725px;
  background-color: #000D1C;
  border-radius: 20px;
}

.videoArea {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
  border-radius: 20px;
}

.videoContent {
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: 20px;
}

// 오른쪽 모니터 - 설정 영역
.rightMonitor {
  display: flex;
  flex-direction: column;
  width: 350px;
  height: 725px;
  padding: 25px 30px;
  background-color: #ffffff;
  border: 1px solid #DDDDDD;
  border-radius: 20px;
  position: relative;
}

// 섹션 제목
.sectionTitle {
  display: flex;
  margin: 0;
  margin-bottom: 15px;
  font-family: 'Pretendard', sans-serif;
  font-weight: 500;
  font-size: 18px;
  line-height: 21px;
  color: #333333;
}

// 직무 선택
.jobSelection {
  display: flex;
  flex-direction: column;
  margin-bottom: 40px;
}

.jobButtons {
  display: flex;
  gap: 10px;
}

.jobButton {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 5px 10px;
  background-color: transparent;
  border: 1px solid #4E4EFF;
  border-radius: 10px;
  font-family: 'Pretendard', sans-serif;
  font-weight: 500;
  font-size: 12px;
  line-height: 14px;
  color: #333333;
  cursor: pointer;
  transition: all 0.3s ease;

  &:hover {
    background-color: rgba(78, 78, 255, 0.1);
  }

  &.selected {
    background-color: #4E4EFF;
    color: #ffffff;
  }
}

// 자료 첨부
.fileUpload {
  display: flex;
  flex-direction: column;
}

.uploadBox {
  display: flex;
  flex-direction: column;
  width: 290px;
  background-color: #ffffff;
  margin-bottom: 40px;
}

.uploadArea {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 290px;
  height: 180px;
  border: 0.5px dashed #DDDDDD;
  border-radius: 10px;
  position: relative;
}

.uploadIcon {
  display: flex;
  width: 30px;
  height: 30px;
  margin-bottom: 10px;
}

.uploadText {
  display: flex;
  margin-bottom: 15px;
  font-family: 'Pretendard', sans-serif;
  font-weight: 500;
  font-size: 14px;
  line-height: 14px;
  color: #555555;
}

.uploadButton {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100px;
  height: 30px;
  background-color: #000D1C;
  border-radius: 5px;
  font-family: 'Pretendard', sans-serif;
  font-weight: 500;
  font-size: 12px;
  line-height: 14px;
  color: #ffffff;
  cursor: pointer;
  transition: background-color 0.3s ease;
  margin-top: 10px;

  &:hover {
    background-color: #1a2a3a;
  }
}

.fileInput {
  display: none;
}

.filePreview {
  display: flex;
  align-items: center;
  width: 258px;
  height: 50px;
  margin-top: 10px;
  padding: 0 10px;
  border: 0.2px solid #DDDDDD;
  font-family: 'Pretendard', sans-serif;
  font-weight: 400;
  font-size: 12px;
  color: #333333;
}

.fileInfo {
  display: flex;
  margin: 0;
  margin-top: 10px;
  font-family: 'Pretendard', sans-serif;
  font-weight: 500;
  font-size: 12px;
  line-height: 14px;
  color: #999999;
}

// 유의사항
.notice {
  display: flex;
  flex-direction: column;
}

.noticeList {
  display: flex;
  flex-direction: column;
  gap: 10px;
  margin: 0;
  padding: 0;
  list-style: none;

  li {
    display: flex;
    font-family: 'Pretendard', sans-serif;
    font-weight: 500;
    font-size: 14px;
    line-height: 20px;
    color: #4E4EFF;
    position: relative;
    padding-left: 15px;

    &::before {
      content: '•';
      position: absolute;
      left: 0;
    }
  }
}

// 음성 인식 상태
.speechStatus {
  display: flex;
  flex-direction: column;
  margin-bottom: 20px;
  padding: 15px;
  background-color: #f8f9fa;
  border-radius: 10px;
  border: 1px solid #e9ecef;
}

.errorMessage {
  display: flex;
  align-items: center;
  padding: 10px;
  background-color: #ffe6e6;
  border-radius: 8px;
  margin-bottom: 10px;
  
  p {
    margin: 0;
    font-family: 'Pretendard', sans-serif;
    font-size: 14px;
    color: #d63384;
  }
}

.listeningIndicator {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 15px;
  background-color: #e8f5e8;
  border-radius: 8px;
  margin-bottom: 10px;
  
  p {
    margin: 10px 0 0 0;
    font-family: 'Pretendard', sans-serif;
    font-size: 14px;
    color: #2d5a2d;
  }
}

.recordingIcon {
  font-size: 24px;
  animation: pulse 1.5s ease-in-out infinite;
}

@keyframes pulse {
  0% {
    transform: scale(1);
    opacity: 1;
  }
  50% {
    transform: scale(1.1);
    opacity: 0.7;
  }
  100% {
    transform: scale(1);
    opacity: 1;
  }
}

.transcriptArea {
  display: flex;
  flex-direction: column;
  padding: 15px;
  background-color: #fff;
  border-radius: 8px;
  border: 1px solid #dee2e6;
  
  h4 {
    margin: 0 0 10px 0;
    font-family: 'Pretendard', sans-serif;
    font-size: 16px;
    font-weight: 500;
    color: #333;
  }
  
  p {
    margin: 0 0 15px 0;
    padding: 10px;
    background-color: #f8f9fa;
    border-radius: 5px;
    font-family: 'Pretendard', sans-serif;
    font-size: 14px;
    line-height: 1.5;
    color: #495057;
    max-height: 100px;
    overflow-y: auto;
  }
}

.resetButton {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100px;
  height: 30px;
  background-color: #6c757d;
  border: none;
  border-radius: 5px;
  font-family: 'Pretendard', sans-serif;
  font-weight: 500;
  font-size: 12px;
  color: #fff;
  cursor: pointer;
  transition: background-color 0.3s ease;
  
  &:hover {
    background-color: #5a6268;
  }
}

// 시작 버튼
.startButton {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 191px;
  height: 40px;
  margin: 0 auto;
  background-color: transparent;
  border: 1px solid #4E4EFF;
  border-radius: 15px;
  font-family: 'Pretendard', sans-serif;
  font-weight: 500;
  font-size: 16px;
  line-height: 19px;
  color: #333333;
  cursor: pointer;
  position: absolute;
  bottom: 25px;
  left: 50%;
  transform: translateX(-50%);

  &:hover:not(:disabled) {
    background-color: #4E4EFF;
    color: #ffffff;
  }

  &:active:not(:disabled) {
    transform: translateX(-50%) scale(0.98);
  }
  
  &:disabled {
    opacity: 0.6;
    cursor: not-allowed;
  }
}

// 질문 화면 스타일
.questionArea {
  display: flex;
  justify-content: center;
  align-items: flex-end;
  width: 100%;
  height: 100%;
  padding: 10px;
}

.questionBox {
  display: flex;
  flex-direction: column;
  width: 705px;
  height: 200px;
  padding: 20px;
  background-color: #ffffff;
  border-radius: 10px;
  position: relative;
}

.questionHeader {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10px;
}

.questionNumber {
  display: flex;
  font-family: 'Pretendard', sans-serif;
  font-weight: 500;
  font-size: 16px;
  line-height: 19px;
  color: #555555;
}

.questionProgress {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 5px 15px;
  border: 1px solid #DDDDDD;
  border-radius: 20px;
  font-family: 'Pretendard', sans-serif;
  font-weight: 500;
  font-size: 14px;
  line-height: 17px;
  color: #999999;
}

.questionContent {
  display: flex;
  justify-content: center;
  align-items: center;
  flex: 1;
  margin-bottom: 20px;
}

.questionText {
  display: flex;
  margin: 0;
  text-align: center;
  font-family: 'Pretendard', sans-serif;
  font-weight: 700;
  font-size: 18px;
  line-height: 21px;
  color: #333333;
}

.micButton {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 5px;
  padding: 10px 15px;
  width: fit-content;
  margin: 0 auto;
  background-color: #4E4EFF;
  border: none;
  border-radius: 20px;
  font-family: 'Pretendard', sans-serif;
  font-weight: 500;
  font-size: 16px;
  line-height: 19px;
  color: #ffffff;
  cursor: pointer;
  transition: all 0.3s ease;

  i {
    font-size: 16px;
  }

  &:hover:not(:disabled) {
    background-color: #3d3dff;
  }
  
  &:disabled {
    opacity: 0.6;
    cursor: not-allowed;
  }
}

// 답변 가이드 스타일
.guideHeader {
  display: flex;
  gap: 6px;
  margin-bottom: 25px;
}

.guideIcon {
  display: flex;
  width: 21px;
  height: 21px;
}

.guideTitle {
  display: flex;
  margin: 0;
  font-family: 'Pretendard', sans-serif;
  font-weight: 500;
  font-size: 18px;
  line-height: 21px;
  color: #333333;
}

.intentSection {
  display: flex;
  flex-direction: column;
  gap: 10px;
  padding: 20px;
  margin-bottom: 30px;
  background-color: #F5F5FF;
  border-radius: 10px;
}

.intentHeader {
  display: flex;
  gap: 5px;
}

.intentIcon {
  display: flex;
  width: 17px;
  height: 17px;
}

.intentTitle {
  display: flex;
  margin: 0;
  font-family: 'Pretendard', sans-serif;
  font-weight: 700;
  font-size: 14px;
  line-height: 17px;
  color: #555555;
}

.intentText {
  display: flex;
  margin: 0;
  font-family: 'Pretendard', sans-serif;
  font-weight: 500;
  font-size: 14px;
  line-height: 19px;
  color: #555555;
}

.guidelinesSection {
  display: flex;
  flex-direction: column;
  gap: 10px;
  margin-bottom: 20px;
}

.guidelinesHeader {
  display: flex;
  gap: 5px;
}

.guidelineIcon {
  display: flex;
  width: 17px;
  height: 17px;
}

.guidelinesTitle {
  display: flex;
  margin: 0;
  font-family: 'Pretendard', sans-serif;
  font-weight: 700;
  font-size: 14px;
  line-height: 17px;
  color: #555555;
}

.guidelinesList {
  display: flex;
  flex-direction: column;
  gap: 10px;
}

.guidelineItem {
  display: flex;
  align-items: center;
  padding: 15px;
  border: 1px solid #DDDDDD;
  border-radius: 10px;
  font-family: 'Pretendard', sans-serif;
  font-weight: 500;
  font-size: 14px;
  line-height: 19px;
  color: #555555;
}